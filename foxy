#!/usr/bin/sh

#-------------------------------------------------------------------------------
# files
#-------------------------------------------------------------------------------

BROWSER=firefox
BOOKMARKS=$HOME/repos/foxy/bookmarks.txt
TMPBOOKMARKS=$HOME/repos/foxy/tmp.txt

#-------------------------------------------------------------------------------
# functions
#-------------------------------------------------------------------------------
usage () {
    echo "Usage: $0 [-h] [-s tag] [-o number] [-a link tag1 tag2...tagn]"
}

tag_array () {
    tagz=""
    
    for i in $args
    do
	if [ $i == "-a" ]; then
	    continue
	else
		tagz+=$i
		tagz+=" "
	fi
    done
    # keep only the tags
    tagz=$(echo $tagz | awk -F': ' '{print $1}' | sed -n 's/[^@]*//p')
    echo $tagz | sed 's/$/: /' | sed "s%$%$dalink%" >> $BOOKMARKS
    echo '' >> $BOOKMARKS
exit 0
}

show_bmarks () {
    cat $BOOKMARKS | grep $tag | awk -F': ' '{print $2}' > $TMPBOOKMARKS
    cat -n $TMPBOOKMARKS
}

open_page () {
    lines=$(wc -l $TMPBOOKMARKS | sed 's/[^0-9]//g')
    if [ $lines -lt $line_num ]; then
	echo 'wrong bookmark number'
	exit 1
    else
	$BROWSER -new-tab $(cat $TMPBOOKMARKS | sed -n "${line_num}p") 2>/dev/null
    fi
}

#-------------------------------------------------------------------------------
# argument parsing
#-------------------------------------------------------------------------------

aflag=0
sflag=0
oflag=0

while :
do
    case $1 in
	-h)
	    usage
	    exit 0
	    ;;
	-s)
	    nargs=$#
	    sflag=1
	    tag=$2
	    break
	    ;;
	-a)
	    nargs=$#
	    args=$*
	    dalink=$2
	    aflag=1
	    break
	    ;;
	-o)
	    nargs=$#
	    oflag=1
	    line_num=$2
	    break
	    ;;
	*)
	    usage
	    exit 1
	    ;;
    esac
done
#-------------------------------------------------------------------------------

if [ $sflag -eq 1 -a $nargs -lt 3 ]; then
    show_bmarks $tag
    exit 0
elif [ $aflag -eq 1 -a $nargs -gt 2 ]; then 
    tag_array $args $dalink
    exit 0
elif [ $oflag -eq 1 -a $nargs -eq 2 ]; then
    if ! [ $2 -eq $2 2>/dev/null ]; then
	echo '-o accepts only numeric arguments'
	exit 1
    else
	open_page $line_num
    exit 0
    fi
else
    echo 'not enough or too many params'
    usage
    exit 1
fi
